<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/blue_700">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="20"
            >
            <ImageView
                android:id="@+id/character_portrait"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="6"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:id="@+id/char_or_wpn"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:id="@+id/nameof"/>
            </LinearLayout>

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3">

            <TextView
                android:id="@+id/Level"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_height="match_parent"
                android:text="Level: "
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/no_atk"
                android:layout_columnWeight="1"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="1"
                android:text="Normal Attack: "
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/elemental_skill"
                android:layout_columnWeight="1"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="2"
                android:text="Elemental Skill: "
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/Burst"
                android:layout_columnWeight="1"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_row="0"
                android:text="Burst: "
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/Talent"
                android:layout_columnWeight="1"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_row="1"
                android:text="Talent: "
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/Exp"
                android:layout_columnWeight="1"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_row="2"
                android:text="Total Exp: "
                android:textColor="@color/white"/>
        </GridLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ascension Materials:"
                android:textColor="@color/white"/>


        </LinearLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:id="@+id/for_ascension_materials"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skill Traces:"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/skill_traces"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>